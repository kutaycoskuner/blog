---
import NavigationLeftHover from "../components/NavigationLeftHover.svelte";
import GotoTop from "../components/GotoTop.svelte";
import ColorMode from "../components/ColorMode.svelte";
const BASE_URL = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href={`${BASE_URL}favicon-triangle.svg`}
        />
        <meta
            name="generator"
            content={Astro.generator}
        />
        <title>Blog - Lichzelg</title>
    </head>
    <body>
        <NavigationLeftHover client:load />
        <GotoTop client:load />
        <ColorMode client:load />
        <div class="slot">
            <slot />
        </div>
    </body>
</html>
<style is:global>
    /* @import "katex/dist/katex.min.css"; */
    @import "../styles/main.css";
    @import url("https://cdn.jsdelivr.net/npm/katex@0.16.8/dist/katex.min.css");
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
    }
    .slot {
        height: 100vh;
        overflow-y: auto; /* scrollable */
    }
</style>
